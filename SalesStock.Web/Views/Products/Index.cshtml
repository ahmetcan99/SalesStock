@model SalesStock.Shared.Common.PaginatedList<SalesStock.Application.Features.Products.DTOs.ProductDTO>

@{
    ViewData["Title"] = "Products";
}

<div class="card max-w-7xl mx-auto">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert-success mb-4" role="alert">
            <span>@TempData["SuccessMessage"]</span>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert-error mb-4" role="alert">
            <span>@TempData["ErrorMessage"]</span>
        </div>
    }

    <div class="flex items-center mb-6 mx-4">
        <h1 class="card-header mr-auto my-auto">@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-success inline-flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            <span>New Product</span>
        </a>
    </div>
    <div class="mb-6 mx-4">
        <form asp-action="Index" method="get" id="searchForm">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 items-end">
                <div class="md:col-span-2">
                    <label class="form-label">Search Term</label>
                    <input type="text" name="searchTerm" value="@ViewData["CurrentFilter"]"
                           class="form-input" placeholder="Search by SKU, Name, or Barcode..." id="searchInput" autocomplete="off" />
                </div>
                <div>
                    <label class="form-label">Status</label>
                    <select name="statusFilter" class="form-input" onchange="this.form.submit()">
                        <option value="" selected="@(ViewData["CurrentStatusFilter"] as string == "")">All</option>
                        <option value="active" selected="@(ViewData["CurrentStatusFilter"] as string == "active")">Active</option>
                        <option value="passive" selected="@(ViewData["CurrentStatusFilter"] as string == "passive")">Passive</option>
                    </select>
                </div>
            </div>
            <div class="flex justify-end gap-2 mt-4">
                <a asp-action="Index" class="btn btn-neutral">Clear Filters</a>
            </div>
        </form>
    </div>
    <div class="overflow-x-auto rounded-lg shadow-sm">
        <table class="table-default">
            <thead class="table-head">
                <tr>
                    <th>SKU</th>
                    <th>Name</th>
                    <th>Unit Price</th>
                    <th>Stock On Hand</th>
                    <th>Status</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.SKU</td>
                        <td>@item.Name</td>
                        <td>@item.UnitPrice.ToString("C")</td>
                        <td>@item.StockOnHand</td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="badge-active">Active</span>
                            }
                            else
                            {
                                <span class="badge-passive">Passive</span>
                            }
                        </td>
                        <td class="flex items-center gap-2">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary text-sm">Edit</a>

                            @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                            {
                                var buttonText = item.IsActive ? "Deactivate" : "Activate";
                                var buttonClass = item.IsActive ? "btn-danger" : "btn-success";
                                <form asp-action="ToggleStatus" asp-route-id="@item.Id" method="post"
                                      onsubmit="return confirm('Are you sure you want to change the status of this product?');">
                                    <button type="submit" class="btn @buttonClass text-sm">@buttonText</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @{
        var prevDisabled = !Model.HasPreviousPage ? "pointer-events-none opacity-50" : "";
        var nextDisabled = !Model.HasNextPage ? "pointer-events-none opacity-50" : "";
    }
    <div class="flex items-center justify-between mt-6 mx-4">
        <span class="text-sm text-gray-700">
            Page @Model.PageIndex of @Model.TotalPages
        </span>
        <div class="inline-flex -space-x-px">
            <a asp-action="Index"
               asp-route-sortOrder="@ViewData["CurrentSort"]"
               asp-route-pageNumber="@(Model.PageIndex - 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               asp-route-statusFilter="@ViewData["CurrentStatusFilter"]"
               class="py-2 px-3 ... @prevDisabled">
                Previous
            </a>
            <a asp-action="Index"
               asp-route-sortOrder="@ViewData["CurrentSort"]"
               asp-route-pageNumber="@(Model.PageIndex + 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               asp-route-statusFilter="@ViewData["CurrentStatusFilter"]"
               class="py-2 px-3 ... @nextDisabled">
                Next
            </a>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {

            const searchInput = document.getElementById('searchInput');
            const searchForm = document.getElementById('searchForm');
            let debounceTimer;

            searchInput.focus();

            const endOfText = searchInput.value.length;
            searchInput.setSelectionRange(endOfText, endOfText);

            searchInput.addEventListener('input', function (e) {
                clearTimeout(debounceTimer);

                if (e.target.value.trim() === '') {
                    searchForm.submit();
                    return;

                }

                debounceTimer = setTimeout(() => {
                    searchForm.submit();
                }, 500);
            });
        });
    </script>
}