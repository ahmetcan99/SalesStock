<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SalesStock.Web</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/tom-select@2.3.1/dist/css/tom-select.default.css" rel="stylesheet">
</head>
<body class="bg-gradient-to-br from-gray-100 to-gray-200 text-gray-800 flex flex-col min-h-screen">

    <!-- NAVBAR -->
    <header class="bg-white/90 backdrop-blur-md shadow-sm border-b border-gray-200">
        <nav class="max-w-7xl mx-auto flex items-center justify-between px-6 py-4">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="text-xl font-bold text-blue-600 tracking-tight">
                SalesStock.Web
            </a>

            <div class="space-x-6 hidden md:flex items-center text-sm font-medium">
                <a asp-controller="Home" asp-action="Index" class="nav-link text-dark">Home</a>
                <a asp-controller="Home" asp-action="Privacy" class="nav-link text-dark">Privacy</a>
                @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                {
                    <a asp-controller="Stock" asp-action="Index" class="nav-link text-dark">Stock Operations</a>
                }
                @if (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("Operator"))
                {
                    <a asp-controller="Products" asp-action="Index" class="nav-link text-dark">Products</a>
                }
                @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                {
                    <a asp-controller="PriceLists" asp-action="Index" class="nav-link text-dark">Price Lists</a>
                }

                @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                {
                    <a asp-controller="Customers" asp-action="Index" class="nav-link text-dark">Customers</a>
                }
                @if (User.IsInRole("Admin"))
                {
                    <a asp-controller="UserManagement" asp-action="Index" class="nav-link text-dark">User Management</a>
                }
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <form asp-controller="Account" asp-action="Logout" method="post" class="inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="nav-link text-dark">Logout</button>
                    </form>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="nav-link text-dark">Login</a>
                }
            </div>

            <!-- Mobile Menu Button -->
            <button id="menu-toggle" class="md:hidden focus:outline-none text-gray-700 hover:text-blue-600 transition">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>
        </nav>

        <!-- Mobile Dropdown -->
        <div id="mobile-menu" class="hidden md:hidden bg-white/95 backdrop-blur-md border-t border-gray-200 shadow-sm">
            <div class="flex flex-col px-6 py-3 space-y-2 text-sm font-medium">
                <a asp-controller="Home" asp-action="Index" class="hover:text-blue-600 transition">Home</a>
                <a asp-controller="Home" asp-action="Privacy" class="hover:text-blue-600 transition">Privacy</a>

                @if (User.IsInRole("Admin"))
                {
                    <a asp-controller="UserManagement" asp-action="Index" class="hover:text-blue-600 transition">User Management</a>
                }
                @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                {
                    <a asp-controller="Customers" asp-action="Index" class="nav-link text-dark">Customers</a>
                }

                @if (User.Identity?.IsAuthenticated == true)
                {
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="hover:text-blue-600 transition w-full text-left">Logout</button>
                    </form>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="hover:text-blue-600 transition">Login</a>
                }
            </div>
        </div>
    </header>

    <!-- MAIN CONTENT -->
    <main class="flex-grow w-full max-w-6xl mx-auto p-6">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-white/90 backdrop-blur-md border-t border-gray-200 shadow-sm">
        <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center text-sm text-gray-600">
            <span>&copy; 2025 SalesStock.Web</span>
            <a asp-controller="Home" asp-action="Privacy" class="hover:text-blue-600 transition">Privacy</a>
        </div>
    </footer>

    <script>
        const menuToggle = document.getElementById("menu-toggle");
        const mobileMenu = document.getElementById("mobile-menu");
        menuToggle.addEventListener("click", () => {
            mobileMenu.classList.toggle("hidden");
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/tom-select@2.3.1/dist/js/tom-select.complete.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
