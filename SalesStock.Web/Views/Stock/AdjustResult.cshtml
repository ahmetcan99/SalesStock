@model SalesStock.Application.Features.Stock.DTOs.StockAdjustmentResultDTO

@{
    ViewData["Title"] = "Adjustment Successful";
}

<div class="card max-w-3xl mx-auto">
    <div class="text-center">
        <svg class="mx-auto h-12 w-12 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <h1 class="card-header mt-4">@ViewData["Title"]</h1>
        <p class="text-gray-600 mb-6">The stock level for the product has been updated.</p>

        <div class="bg-gray-50 p-4 rounded-lg text-left">
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-4 gap-y-2">
                <dt class="font-medium text-gray-500">Product</dt>
                <dd class="text-gray-900">@Model.ProductName (@Model.SKU)</dd>

                <dt class="font-medium text-gray-500">Adjustment Quantity</dt>
                <dd class="text-gray-900 @(Model.AdjustedQuantity >= 0 ? "text-green-600" : "text-red-600")">
                    @(Model.AdjustedQuantity > 0 ? "+" : "")@Model.AdjustedQuantity
                </dd>

                <dt class="font-medium text-gray-500">Previous Stock</dt>
                <dd class="text-gray-900">@Model.OldStock</dd>

                <dt class="font-medium text-gray-500">New Stock</dt>
                <dd class="text-gray-900 font-bold">@Model.NewStock</dd>
            </dl>
        </div>

        <div class="mt-8">
            <a asp-action="Index" class="btn btn-neutral">Return to List</a>
            <a asp-action="Adjust" class="btn btn-primary">Perform Another Adjustment</a>

        </div>
    </div>
</div>