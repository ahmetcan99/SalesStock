@model SalesStock.Web.Common.PaginatedList<SalesStock.Domain.Entities.StockMovement>
@using SalesStock.Domain.Enums

@{
    ViewData["Title"] = "Stock Movements";
}

<div class="card max-w-7xl mx-auto">
    <div class="flex items-center mb-6 mx-4">
        <h1 class="card-header mr-auto my-auto">@ViewData["Title"]</h1>
        <a asp-action="Adjust" class="btn btn-primary inline-flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path></svg>
            <span>New Adjustment</span>
        </a>
    </div>

    <div class="overflow-x-auto rounded-lg shadow-sm">
        <table class="table-default">
            <thead class="table-head">
                <tr>
                    <th>Date</th>
                    <th>Product (SKU)</th>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Movement Type</th>
                    <th>Reference No</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@item.Product.SKU</td>
                        <td>@item.Product.Name</td>
                        <td>
                            @if (item.Quantity > 0)
                            {
                                <span class="font-bold text-green-600">+@item.Quantity</span>
                            }
                            else
                            {
                                <span class="font-bold text-red-600">@item.Quantity</span>
                            }
                        </td>
                        <td>
                            @{
                                string badgeClass = "bg-gray-200 text-gray-800";
                                switch (item.MovementType)
                                {
                                    case StockMovementType.Adjust:
                                        badgeClass = "bg-blue-100 text-blue-800";
                                        break;
                                    case StockMovementType.Reserve:
                                        badgeClass = "bg-yellow-100 text-yellow-800";
                                        break;
                                    case StockMovementType.Release:
                                        badgeClass = "bg-purple-100 text-purple-800";
                                        break;
                                    case StockMovementType.Ship:
                                        badgeClass = "bg-green-100 text-green-800";
                                        break;
                                }
                            }
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @badgeClass">
                                @item.MovementType.ToString()
                            </span>
                        </td>
                        <td>@item.ReferenceNo</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @{
        var prevDisabled = !Model.HasPreviousPage ? "pointer-events-none opacity-50" : "";
        var nextDisabled = !Model.HasNextPage ? "pointer-events-none opacity-50" : "";
    }
    <div class="flex items-center justify-between mt-6 mx-4">
        <span class="text-sm text-gray-700">
            Page @Model.PageIndex of @Model.TotalPages
        </span>
        <div class="inline-flex -space-x-px">
            <a asp-action="Index"
               asp-route-pageNumber="@(Model.PageIndex - 1)"
               class="py-2 px-3 ml-0 leading-tight text-gray-500 bg-white rounded-l-lg border border-gray-300 hover:bg-gray-100 hover:text-gray-700 @prevDisabled">
                Previous
            </a>

            <a asp-action="Index"
               asp-route-pageNumber="@(Model.PageIndex + 1)"
               class="py-2 px-3 leading-tight text-gray-500 bg-white rounded-r-lg border border-gray-300 hover:bg-gray-100 hover:text-gray-700 @nextDisabled">
                Next
            </a>
        </div>
    </div>
</div>
