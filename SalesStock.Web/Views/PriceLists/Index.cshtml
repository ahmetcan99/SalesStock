@model SalesStock.Shared.Common.PaginatedList<SalesStock.Application.Features.PriceLists.DTOs.PriceListDTO>

@{
    ViewData["Title"] = "Price Lists";
}

<div class="card max-w-6xl mx-auto">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert-success mb-4" role="alert">
            <span>@TempData["SuccessMessage"]</span>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert-error mb-4" role="alert">
            <span>@TempData["ErrorMessage"]</span>
        </div>
    }
    @if (TempData["InfoMessage"] != null)
    {
        <div class="alert-info mb-4" role="alert">
            <span>@TempData["InfoMessage"]</span>
        </div>
    }

    <div class="flex items-center mb-6 mx-4">
        <h1 class="card-header mr-auto my-auto">@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-success inline-flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            <span>New Price List</span>
        </a>
    </div>

    <div class="overflow-x-auto rounded-lg shadow-sm">
        <table class="table-default">
            <thead class="table-head">
                <tr>
                    <th>Name</th>
                    <th>Currency</th>
                    <th>Is Default?</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Currency</td>
                        <td>
                            @if (item.IsDefault)
                            {
                                <span class="badge-active">Yes</span>
                            }
                            else
                            {
                                <span class="text-gray-500">No</span>
                            }
                        </td>
                        <td class="flex items-center gap-2">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary text-sm">Edit</a>
                            <a asp-action="ManageItems" asp-route-id="@item.Id" class="btn btn-neutral text-sm">Manage Items</a>
                            @if (!item.IsDefault)
                            {
                                <form asp-action="SetAsDefault" asp-route-id="@item.Id" method="post"
                                      onsubmit="return confirm('Are you sure you want to set this as the default price list?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-success text-sm">Set as Default</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
    @{
        var prevDisabled = !Model.HasPreviousPage ? "pointer-events-none opacity-50" : "";
        var nextDisabled = !Model.HasNextPage ? "pointer-events-none opacity-50" : "";
    }
    <div class="flex justify-between items-center mt-4 px-4">
        <span>Page @Model.PageIndex of @Model.TotalPages</span>
        <div class="flex gap-2">
            <a asp-action="Index"
               asp-route-pageNumber="@(Model.PageIndex - 1)"
               class="btn btn-neutral @prevDisabled">
                Previous
            </a>
            <a asp-action="Index"
               asp-route-pageNumber="@(Model.PageIndex + 1)"
               class="btn btn-neutral @nextDisabled">
                Next
            </a>
        </div>
    </div>

</div>