@model SalesStock.Web.ViewModels.UserManagement.CreateUserViewModel

@{
    ViewData["Title"] = "Add New User";
}

<h1 class="text-2xl font-semibold text-gray-800 mb-4">@ViewData["Title"]</h1>

<div class="bg-white p-6 rounded-lg shadow-md">
    <form asp-action="CreateUser" class="space-y-4">
        <div asp-validation-summary="ModelOnly" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert"></div>

        <div>
            <label asp-for="UserName" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="UserName" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
            <span asp-validation-for="UserName" class="mt-2 text-sm text-red-600"></span>
        </div>

        <div>
            <label asp-for="Email" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Email" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
            <span asp-validation-for="Email" class="mt-2 text-sm text-red-600"></span>
        </div>

        <div>
            <label asp-for="Password" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Password" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
            <span asp-validation-for="Password" class="mt-2 text-sm text-red-600"></span>
        </div>

        <div>
            <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="ConfirmPassword" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
            <span asp-validation-for="ConfirmPassword" class="mt-2 text-sm text-red-600"></span>
        </div>

        <div>
            <label asp-for="SelectedRole" class="block text-sm font-medium text-gray-700"></label>
            <select asp-for="SelectedRole" class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md" asp-items="@Model.RoleList">
                <option value="">-- Choose a Role --</option>
            </select>
            <span asp-validation-for="SelectedRole" class="mt-2 text-sm text-red-600"></span>
        </div>

        <div class="flex items-center justify-end space-x-4 pt-4">
            <a asp-action="Index" class="bg-gray-200 text-gray-700 hover:bg-gray-300 font-bold py-2 px-4 rounded-lg focus:outline-none focus:shadow-outline">Back to List</a>
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg focus:outline-none focus:shadow-outline">Create</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}