@model SalesStock.Domain.Entities.Customer

@{
    ViewData["Title"] = "Create New Customer";
}

<div class="card max-w-3xl mx-auto">
    <h1 class="card-header">@ViewData["Title"]</h1>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="alert-error mb-6"></div>

        <div class="mb-4">
            <label asp-for="Code" class="form-label">Customer Code</label>
            <input asp-for="Code" class="form-input" />
            <span asp-validation-for="Code" class="form-error"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Name" class="form-label">Customer Name</label>
            <input asp-for="Name" class="form-input" />
            <span asp-validation-for="Name" class="form-error"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-input" />
            <span asp-validation-for="Email" class="form-error"></span>
        </div>

        <div class="mb-6">
            <label asp-for="Phone" class="form-label"></label>
            <input asp-for="Phone" class="form-input" />
            <span asp-validation-for="Phone" class="form-error"></span>
        </div>

        <div class="flex justify-end gap-3 mt-8">
            <a asp-action="Index" class="btn btn-neutral">Back to List</a>
            <button type="submit" class="btn btn-primary">Create Customer</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}